package gui;

import java.awt.Color;
import java.awt.Frame;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;


@SuppressWarnings("serial")
public class WordFrequencyFrame extends Frame{
	public WordFrequencyFrame(){
		setSize(900,700);
		setLayout(null);
		setVisible(true);
		setBackground(new Color(225,225,225));
		WordFrequencyPanel wfpanel = new WordFrequencyPanel();
		wfpanel.setBounds(20,20,this.getWidth()/2,this.getWidth()/2);
		wfpanel.setBackground(Color.white);
		add(wfpanel);
		wfpanel.paintMyCanvas(100,100,100,"D:\\dataProcess\\SHAKESPEAREbaseText.txt");

		WordFrequencyPanel gundolfPanel = new WordFrequencyPanel();
		gundolfPanel.setBounds(200,20,this.getWidth()/2,this.getWidth()/2);
	
		add(gundolfPanel);
		gundolfPanel.paintMyCanvas(100,100,100,"D:\\dataProcess\\Iiii 011 gundolf.txt");
		
		addWindowListener(new WindowAdapter(){
			public void windowClosing(WindowEvent e){
				dispose();
				System.exit(0);
			}
		});

	}

	public static void main(String args[])
	{
		WordFrequencyFrame main = new WordFrequencyFrame();
		main.setTitle("Drawing");


	}

}
