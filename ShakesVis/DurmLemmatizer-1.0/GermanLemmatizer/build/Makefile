JAVA=		/usr/local/clactools/jdk/bin/java
JAVAC=		/usr/local/clactools/jdk/bin/javac
JAR=		/usr/local/clactools/jdk/bin/jar
JAVADOC=	/usr/local/clactools/jdk/bin/javadoc
ECHON=		-n
ECHOC=		
LONG_OS=	i686-pc-linux-gnu
OS=		LINUX
CYGPATH=	echo
CYGPATHP=	echo

# a list of packages used in documentation generation. (note: including a
# package that contains no classes causes javadoc to bomb)
PKGS=	ipd.creole.germanlemmatizer

# name of top-level package; top-level name of this resource
PKGTOP=	ipd
RESNAME=GermanLemmatizer

# classpath to build compile commands from
CP=	-classpath `$(CYGPATHP) ../classes`":$(CLASSPATH):"

# sourcepath to build compile commands from
SP=	-sourcepath `$(CYGPATHP) ../src`

# compile and run commands
COMPILE=$(JAVAC) -O -d `$(CYGPATH) ../classes` $(SP) $(CP)
RUN=$(JAVA)

# "all" builds the .class files. 
all: classes resources

# build the whole thing
everything: depend all jar docs internaldocs test

# the .class/.java dependencies are all stored Makefile.dep
include Makefile.dep

# regenerate Makefile.dep
depend:
	./makejdepend.sh ../src/$(PKGTOP) >Makefile.dep


# build gate.jar. recursively includes all the .jar and .zip from lib too
jar: $(CLASSES)
	cd ../classes && $(JAR) cf \
	  `$(CYGPATH) ../build/$(RESNAME).jar` $(PKGTOP) resource.xml

# copy the resources directory into "classes"
resources:
	cd ../src/$(PKGTOP) && cp -R resources ../../classes/$(PKGTOP)
	cd ../src && cp resource.xml ../classes
	echo '<!-- AUTOGENERATED - do not edit -->' >creole.xml
	cat ../src/resource.xml >>creole.xml
	cd ../classes/$(PKGTOP)/resources && rm -rf `find . -name CVS -print`
	cp version.txt build.txt ../classes/$(PKGTOP)/resources

# make the javadoc documentation
docs: $(CLASSES)
	DATE=`date +%b-%d-%Y`; \
	$(JAVADOC) \
	  -link http://java.sun.com/products/jdk/1.3/docs/api/ \
	  $(SP) $(CP) -J-Xmx200m -public \
	  -d `$(CYGPATH) ../doc/javadoc` $(PKGS)

# delete all the class files etc. (doesn't delete gate.jar)
clean:
	rm -rf '../classes/dependency cache' ../classes/$(PKGTOP) \
	  ../classes/resource.xml

